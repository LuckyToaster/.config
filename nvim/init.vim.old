inoremap <silent> df <Esc>
syntax on
set termguicolors 

colorscheme gruvbox

" Set up basic UI enhancements
set number                    " Show line numbers
set relativenumber            " Show relative line numbers
set cursorline                " Highlight the current line
"set cursorcolumn              " Highlight the current column
set showmatch                 " Highlight matching parenthesis
"set foldmethod=syntax         " Enable code folding based on syntax
"set foldlevelstart=99         " Start with all folds open

" Status line and tab line
set laststatus=2              " Always show the status line
set showtabline=2             " Always show the tab line
set ruler                     " Show the cursor position all the time

" Improve editing experience
set expandtab                 " Use spaces instead of tabs
set tabstop=4                 " Number of spaces tabs count for
set shiftwidth=4              " Number of spaces to use for each step of (auto)indent
set smarttab                  " Insert tabs on the start of a line according to 'shiftwidth'
set autoindent                " Maintain indent of current line
"set smartindent               " Smart autoindenting on new lines
set nowrap                    " Don't Wrap lines                                                                                                                                                            
set linebreak                 " Break lines at word boundaries

" Search settings
set ignorecase                " Case insensitive searching
set smartcase                 " Enable smart case
set incsearch                 " Show search results as you type
set hlsearch                  " Highlight search results

" Set up the clipboard
set clipboard=unnamedplus     " Use the system clipboard

" Cool split and window settings
set splitbelow                " Horizontal splits open below current window
set splitright                " Vertical splits open to the right of current window
"set scrolloff=8               " Keep 8 lines visible when scrolling
"set sidescrolloff=8           " Keep 8 columns visible when scrolling horizontally

" Enable mouse support
set mouse=a                   " Enable mouse support in all modes


if exists('g:vscode')
    	" VSCode extension
else
    	" ordinary Neovim
endif

